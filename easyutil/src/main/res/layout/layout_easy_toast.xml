<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/east_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/dp_40">

    <com.llw.easyutil.EasyView
        android:id="@+id/v_easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:radius="@dimen/dp_20" />

    <TextView
        android:layout_alignTop="@+id/v_easy"
        android:layout_alignStart="@+id/v_easy"
        android:text="EasyLibrary"
        android:gravity="center"
        android:layout_alignEnd="@+id/v_easy"
        android:layout_alignBottom="@+id/v_easy"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>